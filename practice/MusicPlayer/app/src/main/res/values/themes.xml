<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="fontFamily">@font/medium</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Theme.MusicPlayer.Font" parent="Theme.MusicPlayer">
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/onWhite</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.MusicPlayer.Single">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.MusicPlayer.FontInterface">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.MusicPlayer.IconFillColor">
        <item name="tint">@color/blue</item>
    </style>

    <style name="Theme.MusicPlayer.IconFillColorTransparent">
        <item name="tint">#CB0B0B0B</item>
    </style>

    <style name="Theme.MusicPlayer.IconFillColor1">
        <item name="tint">@color/green</item>
    </style>


    <style name="Theme.MusicPlayer.FontColorDetails">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Theme.MusicPlayer.playlist">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.MusicPlayer.Font.fragment">
        <item name="android:background">@color/fragmentBG</item>
        <item name="android:textColor">@color/surfaceColor</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.MusicPlayer.FontColor">
        <item name="android:textColor">@color/lightBlue</item>
    </style>

    <style name="Theme.MusicPlayer.FontColorPlaylist">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MusicPlayer.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MusicPlayer.progressBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:progressTint">@color/blue</item>
        <item name="android:thumbTint">@color/blue</item>
    </style>
</resources>