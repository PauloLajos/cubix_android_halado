<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnIntentSearch"
        android:onClick="intentSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search demo" />

    <Button
        android:id="@+id/btnIntentDial"
        android:onClick="intentDial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dial demo" />

    <Button
        android:id="@+id/btnIntentSend"
        android:onClick="intentSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send demo" />

    <Button
        android:id="@+id/btnIntentWaze"
        android:onClick="intentWaze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waze demo" />

    <Button
        android:id="@+id/btnIntentStreetView"
        android:onClick="intentStreetView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StreetView demo" />

</LinearLayout>